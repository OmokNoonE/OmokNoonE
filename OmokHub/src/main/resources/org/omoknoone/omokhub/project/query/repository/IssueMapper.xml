<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.omoknoone.omokhub.project.query.repository.IssueMapper">
    <resultMap id="searchProjectIssuesResultMap" type="org.omoknoone.omokhub.project.query.IssueDTO">
        <id property="issueId" column="ISSUE_ID"/>
        <result property="title" column="TITLE"/>
        <result property="isClosed" column="IS_CLOSED"/>
        <result property="postedDate" column="POSTED_DATE"/>
        <result property="closedDate" column="CLOSED_DATE"/>
        <result property="memberId" column="MEMBER_ID"/>
        <result property="lastModifiedDate" column="LAST_MODIFIED_DATE"/>
    </resultMap>
    <select id="searchProjectIssues" resultMap="searchProjectIssuesResultMap" parameterType="_int">
        SELECT
            A.ISSUE_ID
            , A.TITLE
            , A.IS_CLOSED
            , A.POSTED_DATE
            , A.CLOSED_DATE
            , C.MEMBER_ID
            , A.LAST_MODIFIED_DATE
        FROM ISSUE A
        JOIN PROJECT B ON (A.PROJECT_ID = A.PROJECT_ID)
        JOIN PROJECT_MEMBER C ON (A.PROJECT_MEMBER_ID = C.PROJECT_MEMBER_ID)
        WHERE A.IS_CLOSED IN (0, 1)
        AND A.PROJECT_ID = #{projectId}
    </select>

    <resultMap id="searchProjectMemberIssuesResultMap" type="org.omoknoone.omokhub.project.query.IssueDTO">
        <id property="issueId" column="ISSUE_ID"/>
        <result property="title" column="TITLE"/>
        <result property="isClosed" column="IS_CLOSED"/>
        <result property="postedDate" column="POSTED_DATE"/>
        <result property="closedDate" column="CLOSED_DATE"/>
        <result property="memberId" column="MEMBER_ID"/>
        <result property="lastModifiedDate" column="LAST_MODIFIED_DATE"/>
    </resultMap>
    <select id="searchProjectMemberIssues" resultMap="searchProjectMemberIssuesResultMap" parameterType="string">
        SELECT
          I.ISSUE_ID
        , I.TITLE
        , I.IS_CLOSED
        , I.POSTED_DATE
        , I.CLOSED_DATE
        , PM.MEMBER_ID
        , I.LAST_MODIFIED_DATE
        FROM ISSUE I
        JOIN PROJECT P ON (I.PROJECT_ID = P.PROJECT_ID)
        JOIN PROJECT_MEMBER PM ON (I.PROJECT_MEMBER_ID = PM.PROJECT_MEMBER_ID)
        WHERE PM.MEMBER_ID = #{memberId}
        ORDER BY I.ISSUE_ID DESC
    </select>
</mapper>