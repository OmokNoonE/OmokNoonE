<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.omoknoone.omokhub.project.query.repository.ScheduleMapper">

        <resultMap id="scheduleInProjectResultMap" type="org.omoknoone.omokhub.project.query.ProjectAndScheduleDTO">
            <id property="projectId" column="PROJECT_ID"/>
            <result property="title" column="TITLE"/>
            <result property="status" column="STATUS"/>
            <collection property="list" ofType="org.omoknoone.omokhub.project.query.ScheduleDTO">
                <id property="scheduleId" column="SCHEDULE_ID"/>
                <result property="startDate" column="START_DATE"/>
                <result property="endDate" column="END_DATE"/>
                <result property="title" column="TITLE"/>
                <result property="content" column="CONTENT"/>
                <result property="progress" column="PROGRESS"/>
                <result property="lastModifiedDate" column="LAST_MODIFIED_DATE"/>
            </collection>
        </resultMap>
        <resultMap id="MySheduleResultMap" type="org.omoknoone.omokhub.project.query.UserAndScheduleDTO">
            <id property="memberId" column="MEMBER_ID"/>
            <result property="name" column="NAME"/>
            <collection property="list" ofType="org.omoknoone.omokhub.project.query.ScheduleDTO">
                <id property="scheduleId" column="SCHEDULE_ID"/>
                <result property="projectId" column="PROJECT_ID"/>
                <result property="title" column="TITLE"/>
                <result property="startDate" column="START_DATE"/>
                <result property="endDate" column="END_DATE"/>
                <result property="progress" column="PROGRESS"/>
                <result property="lastModifiedDate" column="LAST_MODIFIED_DATE"/>
            </collection>
        </resultMap>

        <select id="selectScheduleByProject" parameterType="_int" resultMap="scheduleInProjectResultMap">
            SELECT
                   A.PROJECT_ID
                 , A.TITLE
                 , A.STATUS
                 , B.START_DATE
                 , B.END_DATE
                 , B.TITLE
                 , B.CONTENT
                 , B.PROGRESS
                 , B.LAST_MODIFIED_DATE
              FROM PROJECT A
              JOIN SCHEDULE B ON (A.PROJECT_ID = B.PROJECT_ID)
             WHERE A.PROJECT_ID = #{projectId}
        </select>

        <select id="selectScheduleByUser" parameterType="string" resultMap="MySheduleResultMap">
            SELECT
                   A.MEMBER_ID
                 , A.NAME
                 , B.PROJECT_ID
                 , B.TITLE
                 , B.START_DATE
                 , B.END_DATE
                 , B.PROGRESS
                 , B.LAST_MODIFIED_DATE
              FROM USER A
              JOIN SCHEDULE B ON (A.MEMBER_ID = B.MEMBER_ID)
             WHERE A.MEMBER_ID = #{memberId}
             ORDER BY B.SCHEDULE_ID DESC
        </select>
    </mapper>
